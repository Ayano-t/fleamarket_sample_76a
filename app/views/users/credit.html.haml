              %option{:value => "8"} 08
              %option{:value => "9"} 09
              %option{:value => "10"} 10
              %option{:value => "11"} 11
              %option{:value => "12"} 12
          .credit__form__box__select-form__date
            月
          .credit__form__box__select-form__select
            %select{:name => ""}
              %option{:value => "0"}  --
              %option{:value => "1"} 2020
              %option{:value => "2"} 2021
              %option{:value => "3"} 2022
