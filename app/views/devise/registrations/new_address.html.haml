          = text_field_tag "phone_number", "", class: "address__form__box__input", placeholder: "例）012-345-6789" , type: "text", id: "phone_number"
        .address__form__submit
          = submit_tag "登録する", id: "token_submit", class: "address__form__submit__btn"
