        .address__form__box
          %label.address__form__box__title
            市区町村
            %span.address__form__box__title__req
              必須
          %br/
          = text_field_tag "municipalities", "", class: "address__form__box__input", placeholder: "例）渋谷区" , type: "text", id: "municipalities"
        .address__form__box
          %label.address__form__box__title
            番地
            %span.address__form__box__title__req
              必須
          %br/
          = text_field_tag "block_number", "", class: "address__form__box__input", placeholder: "例）xxx-ooo" , type: "text", id: "block_number"
        .address__form__box
          %label.address__form__box__title
            建物名
          %br/
