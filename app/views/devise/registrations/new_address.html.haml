.body
  .header
    .header__inner
      = image_tag 'logo.png', alt: '', height: '80', width: '', class: 'header__inner-logo'
        


  .address
    %h2.address__top 個人情報入力
    .address__form
      = form_tag do
        .address__form__box
          %label.address__form__box__title
            郵便番号
            %span.address__form__box__title__req
              必須
          %br/
          = text_field_tag "postal-code", "", class: "address__form__box__input", placeholder: "例）123-456" , type: "text", id: "postal-code"
        .address__form__box
          %label.address__form__box__title
            都道府県
            %span.address__form__box__title__req
              必須
          %br/
          %select.address__form__box__input{name: "prefecturs", type: "text"}
            %option{ value: "0"} --
            %option{ value: "1"} 北海道
            %option{ value: "2"} 青森県
            %option{ value: "3"} 岩手県
            %option{ value: "4"} 宮城県
